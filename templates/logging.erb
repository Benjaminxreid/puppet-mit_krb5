<% fields = ['default', 'admin_server', 'kdc']
output = []
scope_hash = scope.to_hash
fields.each do |k|
  if scope_hash.include? k and not scope_hash[k].empty?
    value = scope_hash[k]
    # Preserve array-type values
    if value.respond_to?('each')
      value.flatten! if value.respond_to?('flatten')
      value.each do |v|
        output.push("#{k} = #{v}")
      end
    else
      output.push("#{k} = #{value}")
    end
  end
end
-%>
[logging]
<% if not output.empty? -%>
    <%= output.join("\n    ") %>
<% end %>
